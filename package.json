{
  "name": "minicom-workspace",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=22 <23",
    "pnpm": "8.15.1"
  },
  "scripts": {
    "dev": "pnpm -r --parallel --filter @minicom/visitor --filter @minicom/agent dev",
    "dev:visitor": "pnpm --filter @minicom/visitor dev",
    "dev:agent": "pnpm --filter @minicom/agent dev",
    "build": "pnpm -r --if-present build",
    "lint": "pnpm -r --if-present lint",
    "test": "pnpm -r --if-present test",
    "test:watch": "pnpm -r --if-present test:watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "deploy": "node scripts/deploy.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-motion": "^0.0.40",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
